{
    "python.linting.enabled": true,
    "python.linting.cwd": "${workspaceFolder}/app",
    "python.linting.lintOnSave": true,

    "python.linting.flake8Enabled": true,

    "python.linting.mypyEnabled": true,
    "python.linting.mypyArgs": ["--config-file=${workspaceFolder}/app/mypy.ini"],
    // "python.linting.mypyCategorySeverity.error": "Hint",

    "python.testing.cwd": "${workspaceFolder}/app",
    "python.testing.unittestEnabled": false,
    "python.testing.pytestEnabled": true,
    "python.testing.pytestArgs": ["app/tests"],
    // "python.testing.autoTestDiscoverOnSaveEnabled": false,

    "python.analysis.extraPaths": ["app"],
    "python.envFile": "${workspaceFolder}/.env",
    "files.associations": {
        ".env": "properties"
    },
    "python.formatting.provider": "black"
}
